{
  "version": 3,
  "variant": "W",
  "name": "仕事勢SOP",
  "categories": [
    "inbox_sop","slack_sop","meeting_sop","notification_sop",
    "email_sop","eod_sop","morning_sop","calendar_sop",
    "capture_sop","focus_sop","review_sop","async_sop"
  ],
  "defaultBgTypes": ["desk","desk","desk","desk","desk","desk"],
  "brandSlideOnly": 5,
  "fixedLayout": "poster_dark",
  "fixedPosition": "top-center",
  "bannedWords": [
    "free money","guaranteed","100%","cure","miracle","hack your",
    "doctors hate","secret trick","make money","get rich","no effort",
    "limited time","act now","don't miss","once in a lifetime",
    "tax","taxation","interest rate","compound interest"
  ],
  "cautionWords": [
    "download","install","buy","subscribe","sign up",
    "optimize","efficient","important","in conclusion","therefore"
  ],
  "slideRules": {
    "slide1": {"role":"stop_hook","maxWords":12,"maxChars":28,"fontSize":"xl","position":"top"},
    "slide2": {"role":"rule","prefix":"Rule #1:","maxLines":2,"maxChars":42},
    "slide3": {"role":"rule","prefix":"Rule #2:","maxLines":2,"maxChars":42},
    "slide4": {"role":"rule","prefix":"Rule #3:","maxLines":2,"maxChars":42},
    "slide5": {"role":"summary","maxLines":2,"maxChars":42},
    "slide6": {"role":"save_cta","mustContain":"Save this SOP","brandFooter":true,"maxLines":2,"maxChars":42}
  },
  "patterns": [
    {
      "id":"W001","category":"inbox_sop",
      "tags":["hero","inbox","email","2min","sort"],
      "structure":"hook→rule1→rule2→rule3→summary→save",
      "weight":2.0,
      "slides":[
        ["Your inbox is not","a to-do list."],
        ["Rule #1:","< 2 min? Do it now."],
        ["Rule #2:","Needs action? Move it out."],
        ["Rule #3:","Subject = ACTION + deadline."],
        ["Messages stay in inbox.","Tasks live somewhere else."],
        ["Save this SOP.","Try it tomorrow morning."]
      ]
    },
    {
      "id":"W002","category":"slack_sop",
      "tags":["hero","slack","dm","task","move"],
      "structure":"hook→rule1→rule2→rule3→summary→save",
      "weight":2.0,
      "slides":[
        ["Slack is not","your task manager."],
        ["Rule #1:","Read. Reply. Move on."],
        ["Rule #2:","If it needs work, move it out."],
        ["Rule #3:","One tool for tasks. Not Slack."],
        ["Messages expire.","Tasks don't."],
        ["Save this SOP.","Share it with your team."]
      ]
    },
    {
      "id":"W003","category":"meeting_sop",
      "tags":["hero","meeting","output","decline","25min"],
      "structure":"hook→rule1→rule2→rule3→summary→save",
      "weight":2.0,
      "slides":[
        ["Most meetings","should be emails."],
        ["Rule #1:","No agenda? Decline."],
        ["Rule #2:","25 min max. Not 60."],
        ["Rule #3:","End with owner + deadline."],
        ["One meeting.","One output. That's it."],
        ["Save this SOP.","Send before your next invite."]
      ]
    },
    {
      "id":"W004","category":"notification_sop",
      "tags":["hero","notifications","focus","15min","batch"],
      "structure":"hook→rule1→rule2→rule3→summary→save",
      "weight":2.0,
      "slides":[
        ["Every notification","costs you 23 minutes."],
        ["Rule #1:","Check at set times only."],
        ["Rule #2:","15 min AM. 15 min PM."],
        ["Rule #3:","Everything else? Capture it."],
        ["Silence isn't missing out.","It's getting ahead."],
        ["Save this SOP.","Turn off badges tonight."]
      ]
    },
    {
      "id":"W005","category":"email_sop",
      "tags":["email","subject_line","action","fyi"],
      "structure":"hook→rule1→rule2→rule3→example→save",
      "weight":1.0,
      "slides":[
        ["Your subject line","decides everything."],
        ["Rule #1:","Start with ACTION or FYI."],
        ["Rule #2:","Add the deadline. Always."],
        ["Rule #3:","One topic. One thread."],
        ["Bad: 'Quick question'","Good: 'ACTION \u2014 Review by Fri'"],
        ["Save this SOP.","Fix your next email."]
      ]
    },
    {
      "id":"W006","category":"eod_sop",
      "tags":["end_of_day","close","5min","tomorrow"],
      "structure":"hook→rule1→rule2→rule3→benefit→save",
      "weight":1.5,
      "slides":[
        ["5 minutes tonight.","2 hours saved tomorrow."],
        ["Rule #1:","Inbox to zero."],
        ["Rule #2:","Move open tasks to tomorrow."],
        ["Rule #3:","Write one line: what's first."],
        ["Tomorrow-you","starts with zero friction."],
        ["Save this SOP.","Run it at 5 PM."]
      ]
    },
    {
      "id":"W007","category":"morning_sop",
      "tags":["hero","morning","startup","slack","deep_work","tasks"],
      "structure":"hook→rule1→rule2→rule3→principle→save",
      "weight":2.0,
      "slides":[
        ["Don't touch your phone.","Not yet."],
        ["Rule #1:","Write down 3 tasks."],
        ["Rule #2:","90 min deep work. No inbox."],
        ["Rule #3:","Messages only after 11 AM."],
        ["Own your first hour.","Or someone else will."],
        ["Save this SOP.","Start tomorrow."]
      ]
    },
    {
      "id":"W008","category":"calendar_sop",
      "tags":["calendar","block","deep_work","buffer"],
      "structure":"hook→rule1→rule2→rule3→principle→save",
      "weight":1.0,
      "slides":[
        ["If it's not blocked,","it won't happen."],
        ["Rule #1:","2 hours for deep work. Daily."],
        ["Rule #2:","No meetings before 11."],
        ["Rule #3:","15 min buffer between calls."],
        ["Your calendar shows","your real priorities."],
        ["Save this SOP.","Audit your week now."]
      ]
    },
    {
      "id":"W009","category":"capture_sop",
      "tags":["capture","brain","30sec","one_tool"],
      "structure":"hook→rule1→rule2→rule3→principle→save",
      "weight":1.5,
      "slides":[
        ["That idea you just had?","Already fading."],
        ["Rule #1:","Capture in 30 seconds."],
        ["Rule #2:","One tool. Not five."],
        ["Rule #3:","Verb + noun + deadline."],
        ["If it's in your head,","it's already gone."],
        ["Save this SOP.","Use it right now."]
      ]
    },
    {
      "id":"W010","category":"focus_sop",
      "tags":["focus","90min","deep_work","silence"],
      "structure":"hook→rule1→rule2→rule3→comparison→save",
      "weight":1.5,
      "slides":[
        ["90 focused minutes >","8 hours of switching."],
        ["Rule #1:","Close Slack. Close email."],
        ["Rule #2:","Phone face down. Silent."],
        ["Rule #3:","One task. Zero tabs."],
        ["Deep work is the job.","Not a luxury."],
        ["Save this SOP.","Block 90 min today."]
      ]
    },
    {
      "id":"W011","category":"review_sop",
      "tags":["weekly","review","sunday","15min","top3"],
      "structure":"hook→rule1→rule2→rule3→comparison→save",
      "weight":1.0,
      "slides":[
        ["15 minutes on Sunday.","Saves your whole week."],
        ["Rule #1:","Clear every inbox."],
        ["Rule #2:","Scan the next 7 days."],
        ["Rule #3:","Pick your top 3 for Monday."],
        ["Review once.","Execute all week."],
        ["Save this SOP.","Do it this Sunday."]
      ]
    },
    {
      "id":"W012","category":"async_sop",
      "tags":["async","communication","context","calls"],
      "structure":"hook→rule1→rule2→rule3→benefit→save",
      "weight":1.0,
      "slides":[
        ["Stop waiting for replies.","Start moving."],
        ["Rule #1:","State the ask + the deadline."],
        ["Rule #2:","One message. Full context."],
        ["Rule #3:","Async first. Calls last."],
        ["Clear messages =","fewer meetings."],
        ["Save this SOP.","Share it with your team."]
      ]
    }
  ]
}
